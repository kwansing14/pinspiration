<h1>Pins#index</h1>
<p>Find me in app/views/pins/index.html.erb</p>

<% if user_signed_in? %>
<%= link_to 'log out', destroy_user_session_url, method: :delete %>

<p><%= link_to 'New Pin', new_pin_path %></p>

<h2> List of Pins </h2>
<table>
  <tr>
    <th>Pin's title</th>
    <th>Pin's Img </th>
  </tr>

  <% @pins.each do |pin| %>
    <tr>
      <td><%= pin.title %></td>
      <td><img src=<%= pin.imgurl %>></td>
      <td><%= link_to 'Comment', new_pin_comment_path(pin) %></td>
      <td><%= link_to 'Show', pin_path(pin) %></td>
      <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
      <td><%= link_to 'Destroy', pin_path(pin),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<% else %>
<%= link_to 'log in', new_user_session_url %>
<% end %>